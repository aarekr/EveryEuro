<%= form_with(model: month) do |form| %>
  <% if month.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(month.errors.count, "error") %> prohibited this month from being saved:</h2>

      <ul>
        <% month.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <table>
      <tr>
        <td><%= form.label :name %></td>
        <td><%= form.text_field :name %></td>
      </tr>
      <tr>
        <td><%= form.label :year %></td>
        <td><%= form.number_field :year %></td>
      </tr>
    </table>
  </div>

  <p>Enter the estimated budgeting items for this month.</p>

  <div>
    <%= form.label :income, style: "display: block" %>
    <%= form.number_field :income %>
  </div>

  <div>
    <%= form.label :rent, style: "display: block" %>
    <%= form.number_field :rent %>
  </div>

  <div>
    <%= form.label :food, style: "display: block" %>
    <%= form.number_field :food %>
  </div>

  <div>
    <%= form.label :saving, style: "display: block" %>
    <%= form.number_field :saving %>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
